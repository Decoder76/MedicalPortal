<!-- app/views/patients/show.html.erb -->
<h1>Patient Profile: <%= @patient.first_name %> <%= @patient.last_name %></h1>

<p><strong>Date of Birth:</strong> <%= @patient.date_of_birth %></p>
<p><strong>Address:</strong> <%= @patient.address %></p>
<p><strong>Phone:</strong> <%= @patient.phone %></p>

<% if current_user.receptionist? %>
  <%= link_to 'Edit', edit_patient_path(@patient), class: 'btn btn-primary' %>
  <%= link_to 'Delete', patient_path(@patient), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
<% end %>

<%= link_to 'Back to Patients List', patients_path, class: 'btn btn-secondary' %>
